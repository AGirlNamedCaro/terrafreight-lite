<%= turbo_frame_tag dom_id(@shipment) do %>
  <div class="border rounded-lg p-4 bg-gray-50 mb-4">
    <h2 class="text-lg font-semibold mb-4">Edit Shipment #<%= @shipment.id %></h2>
    
    <%= form_with model: @shipment, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :origin_lat, "Origin Latitude", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :origin_lat, step: :any,
                                        class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :origin_lng, "Origin Longitude", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :origin_lng, step: :any,
                                        class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :destination_lat, "Destination Latitude", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :destination_lat, step: :any,
                                             class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :destination_lng, "Destination Longitude", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :destination_lng, step: :any,
                                             class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div class="flex gap-2">
        <%= f.submit "Save Changes", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-medium" %>
<%= link_to "Cancel", shipments_path,
            class: "text-gray-600 hover:text-gray-800 font-medium" %>
      </div>
    <% end %>
  </div>
<% end %>
